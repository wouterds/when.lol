{% extends '_base.html.twig' %}

{% block title %}{{ title }}{% endblock %}
{% set disableSocial = true %}

{% block body %}
    <div id="wrapper" class="wrapper" data-app-url="{{ url }}">
        <div class="middle-container">
            {% include 'includes/_navigation.html.twig' %}

            <div class="middle">
                <ul class="gallery-items">
                    {% for item in items %}
                    <li class="gallery-item">
                        <a href="/gallery/{{ item.id }}" class="gallery-item__id">
                            {{ item.id }}
                        </a>
                        <div class="gallery-item__image">
                            <img src="{{ item.url }}{% if bot %}?direct=1{% endif %}" alt="{{ item.text }}">
                        </div>
                    </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
{% endblock %}
